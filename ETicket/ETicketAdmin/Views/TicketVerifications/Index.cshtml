@model IEnumerable<ETicket.DataAccess.Domain.Entities.TicketVerification>

@{
    ViewData["Title"] = "Index";
}

<link href="/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
<link href="~/css/ButtonMoves/moved-data-table-controls.css" rel="stylesheet" />

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Ticket verification</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Ticket)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.VerificationUTCDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Station)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Transport)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IsVerified)
                            </th>
                            <th>
                                Actions
                            </th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Ticket)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.VerificationUTCDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Station)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Transport)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IsVerified)
                            </th>
                            <th>
                                Actions
                            </th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.ActionLink(item.TicketId.ToString(), "Details", "Ticket", new { id = item.TicketId }, null)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.VerificationUTCDate)
                                </td>
                                <td>
                                    @Html.ActionLink(item.Station.Name, "Details", "Station", new { id = item.StationId }, null)
                                </td>
                                <td>
                                    @Html.ActionLink(item.TransportId.ToString(), "Details", "Transports", new { id = item.TransportId }, null)
                                </td>
                                <td>
                                    @(item.IsVerified ? "Yes" : "No")
                                </td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script src="/vendor/jquery/jquery.min.js"></script>

<!-- Page level plugins -->
<script src="/vendor/datatables/jquery.dataTables.min.js"></script>
<script src="/vendor/datatables/dataTables.bootstrap4.min.js"></script>

<!-- Page level custom scripts -->
<script src="/js/datatables-starter.js"></script>
<script src="~/js/button-create-moves/button-create-move.js"></script>